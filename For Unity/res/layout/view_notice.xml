<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.tadpolechain.MarqueeTextView
        android:id="@+id/noticeText"
        android:layout_width="match_parent"
        android:background="#99000000"
        android:layout_height="40dp" />

    <RelativeLayout
        android:id="@+id/rlWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:background="#99000000"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_user_default" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/avatar"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffcccccc"
                android:textSize="12sp"
                android:text="欢迎回来，" />

            <TextView
                android:id="@+id/nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffffff"
                android:layout_marginTop="3dp"
                android:textSize="14sp"
                android:text="咯咯哒" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/adTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivAdPicTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_ad_bar"/>

        <ImageView
            android:id="@+id/ivCloseTop"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignRight="@+id/ivAdPicTop"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_ad_close"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/adBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivAdPicBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_ad_bar"/>

        <ImageView
            android:id="@+id/ivCloseBottom"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignRight="@+id/ivAdPicBottom"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_ad_close"/>

    </RelativeLayout>

</RelativeLayout>
